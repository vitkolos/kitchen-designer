{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "kitchen_parts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "is_top": { "type": "boolean" },
                    "position": {
                        "type": "object",
                        "properties": {
                            "x": { "type": "number" },
                            "y": { "type": "number" },
                            "angle": { "type": "number" },
                            "group_number": { "type": "number" },
                            "group_offset": { "type": "number" }
                        },
                        "required": ["x", "y", "angle", "group_number", "group_offset"]
                    },
                    "width": { "type": "number" },
                    "depth": { "type": "number" },
                    "edge_left": { "type": "boolean" },
                    "edge_right": { "type": "boolean" }
                },
                "required": ["name", "width", "depth", "position"]
            }
        },
        "rules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": { "enum": ["exclude", "include"] },
                    "area": { "enum": ["kitchen", "group", "group_section"] },
                    "attribute_name": { "enum": ["name", "type", "zone"] },
                    "attribute_value": { "type": "string" },
                    "group": { "type": "number" },
                    "section_offset": { "type": "number" },
                    "section_width": { "type": "number" }
                },
                "required": ["type", "area", "attribute_name", "attribute_value"]
            }
        },
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "fixture_type": { "type": "string" },
                    "x": { "type": "number" },
                    "y": { "type": "number" }
                },
                "required": ["fixture_type", "x", "y"]
            }
        },
        "zones": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "is_optimized": { "type": "boolean" },
                    "has_optimal_center": { "type": "boolean" },
                    "optimal_center": {
                        "type": "object",
                        "properties": {
                            "x": { "type": "number" },
                            "y": { "type": "number" }
                        }
                    }
                },
                "required": ["name"]
            }
        },
        "available_fixtures": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string" },
                    "zone": { "type": "string" },
                    "position_top": { "type": "boolean" },
                    "position_bottom": { "type": "boolean" },
                    "width_min": { "type": "number" },
                    "width_max": { "type": "number" },
                    "storage": { "type": "number" },
                    "has_worktop": { "type": "boolean" },
                    "allow_edge": { "type": "boolean" },
                    "allow_multiple": { "type": "boolean" }
                },
                "required": ["name", "type", "zone", "width_min", "width_max"]
            }
        }
    },
    "required": ["kitchen_parts", "available_fixtures"]
}
